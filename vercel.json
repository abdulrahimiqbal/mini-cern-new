{
  "version": 2,
  "framework": null,
  "buildCommand": "npm run build && mkdir -p api && cp dist/index.js api/index.js",
  "outputDirectory": "dist/public",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
} 